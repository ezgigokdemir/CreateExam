<link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
<link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
<link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
<link rel="stylesheet" type="text/css" href="~/css/util.css">
<link rel="stylesheet" type="text/css" href="~/css/main.css">
<div class="limiter">
    <div class="container-login100" style="background-image: url('~/content/images/librarybackground.jpg');">
        <div class="wrap-login100 p-t-30 p-b-50">
            <span class="login100-form-title p-b-41">
                Kullanıcı Girişi
            </span>
            <form id="account" method="post" class="login100-form validate-form p-b-33 p-t-5">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    @*<label asp-for="Input.Email"></label>*@
                    <input asp-for="Input.Email" class="input100" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="focus-input100" data-placeholder="&#xe82a;"></span>
                </div>
                <div class="wrap-input100 validate-input">
                    @*<label asp-for="Input.Password"></label>*@
                    <input asp-for="Input.Password" class="input100" placeholder="Şifre" />
                    <span asp-validation-for="Input.Password" class="focus-input100" data-placeholder="&#xe80f;"></span>
                </div>
                <div class="container-login100-form-btn m-t-32">
                    <button type="submit" class="login100-form-btn">Giriş</button>
                </div>
            </form>
            <div class="card-footer text-center  text-light">
                <div class="small">  <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></div>
            </div>
        </div>
    </div>
</div>

<div id="dropDownSelect1"></div>

<script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>

<script src="~/vendor/animsition/js/animsition.min.js"></script>

<script src="~/vendor/bootstrap/js/popper.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>

<script src="~/vendor/select2/select2.min.js"></script>

<script src="~/vendor/daterangepicker/moment.min.js"></script>
<script src="~/vendor/daterangepicker/daterangepicker.js"></script>

<script src="~/vendor/countdowntime/countdowntime.js"></script>

<script src="~/js/main.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

